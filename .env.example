# AI Timeline Environment Configuration
# Copy this file to .env and fill in the values

# Application
VITE_APP_TITLE=AI Timeline

# API Configuration
# For local development:
VITE_API_URL=http://localhost:4000/api
# For production build (update with your API Gateway URL):
# VITE_API_URL=https://YOUR-API-ID.execute-api.us-east-1.amazonaws.com/prod

# Feature Flags (optional)
# VITE_ENABLE_ANALYTICS=false

# ============================================
# DATABASE (PostgreSQL)
# ============================================

# Local development: Run PostgreSQL via Docker:
# docker run --name ai-timeline-postgres -e POSTGRES_PASSWORD=password -e POSTGRES_DB=ai_timeline_dev -p 5432:5432 -d postgres:15
DATABASE_URL="postgresql://postgres:password@localhost:5432/ai_timeline_dev"

# AI Learning Companion (Sprint 9)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ============================================
# AUTHENTICATION (Required for production)
# ============================================

# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 48
JWT_SECRET=

# JWT token expiration (e.g., "1h", "24h", "7d")
JWT_EXPIRES_IN=24h

# Admin credentials - ADMIN_PASSWORD MUST be at least 16 characters
# Use a strong, unique password
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# ============================================
# CORS Configuration (Required for production)
# ============================================

# Comma-separated list of allowed origins, or single origin
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=

# ============================================
# Node Environment
# ============================================

# Set to "production" in production deployments
NODE_ENV=development
